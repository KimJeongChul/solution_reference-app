<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/SKOrange"/>
            <corners android:radius="8dp"/>
            <solid android:color="@color/SKOrange30"/>
            <padding
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp"
                android:left="5dp"
                />
        </shape>
    </item>
    <item
        android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke
                android:width="0dp"
                />
            <solid android:color="@color/Gray"/>
            <corners android:radius="8dp"/>
            <padding
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp"
                android:left="5dp"
                />
        </shape>
    </item>
</selector>