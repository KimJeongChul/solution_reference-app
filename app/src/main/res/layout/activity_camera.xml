<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:background="@color/Background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/middle_controller"
        android:orientation="horizontal"
        android:weightSum="10">
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="org.tensorflow.demo.CameraActivity">

            <SurfaceView
                android:id="@+id/texture"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <org.tensorflow.lite.examples.detection.customview.OverlayView
                android:id="@+id/tracking_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/middle_controller"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_above="@+id/layout_controller"
        android:background="@color/Background2"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:id="@+id/currentModelNameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/app_main_font"
                android:text="Model "
                android:textColor="@color/LightGray"
                android:textFontWeight="300"
                android:textSize="11sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/currentModelNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/app_main_font"
                android:text="ModelName"
                android:textColor="@color/White"
                android:textFontWeight="500"
                android:textSize="11sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/app_main_font"
                android:text="Network "
                android:textColor="@color/LightGray"
                android:textFontWeight="300"
                android:textSize="11sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/networkTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/app_main_font"
                android:text="-"
                android:textAlignment="textEnd"
                android:textColor="@color/White"
                android:textFontWeight="500"
                android:textSize="11sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/app_main_font"
                android:text=" ms"
                android:textColor="@color/White"
                android:textFontWeight="400"
                android:textSize="11sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/app_main_font"
                android:text="  |  "
                android:textColor="@color/LightGray"
                android:textFontWeight="300"
                android:textSize="11sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/app_main_font"
                android:text="Inference "
                android:textColor="@color/LightGray"
                android:textFontWeight="300"
                android:textSize="11sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/inferenceTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/app_main_font"
                android:text="-"
                android:textColor="@color/White"
                android:textFontWeight="500"
                android:textSize="11sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/app_main_font"
                android:text=" ms"
                android:textColor="@color/White"
                android:textFontWeight="400"
                android:textSize="11sp"
                android:textStyle="normal" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_controller"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_alignParentBottom="true"
        android:background="@color/Background"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/modeChangeBtn"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/modeMecText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_main_font"
                    android:text="MEC"
                    android:textColor="@color/White"
                    android:textFontWeight="700"
                    android:textSize="10sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_main_font"
                    android:text="  /  "
                    android:textColor="@color/White"
                    android:textFontWeight="700"
                    android:textSize="10sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/modeLocalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/app_main_font"
                    android:text="LOCAL"
                    android:textColor="@color/White"
                    android:textFontWeight="700"
                    android:textSize="10sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/modeImage"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_above="@id/lottie_trasport"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:scaleType="center"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/modeChangeBtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_above="@id/lottie_trasport"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:padding="6dp"
                android:scaleType="center"
                android:src="@drawable/ic_switch" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_trasport"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/cloud_sample2" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <!--            <com.airbnb.lottie.LottieAnimationView-->
            <!--                android:id="@+id/lottie_circle"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                app:lottie_rawRes="@raw/circle"-->
            <!--                app:lottie_autoPlay="true"-->
            <!--                app:lottie_loop="true"-->
            <!--                />-->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_circle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/circle" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_effect"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/effect" />

            <ImageButton
                android:id="@+id/actionBtn"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:padding="6dp"
                android:scaleType="center"
                android:src="@drawable/ic_shot_single" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout_weight="1">

            <ImageButton
                android:id="@+id/settingBtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:padding="6dp"
                android:scaleType="center"
                android:src="@drawable/ic_setting" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
